$C = "../Common.ui";

$C.@PageOverlay {

  $C.@DecoratedContainer {
    Anchor: (Width: 580, Height: 759);

    #Title {
      Group {
        $C.@Title #TitleText {
          @Text = "Create Nation Base";
        }
      }
    }

    #Content {
      LayoutMode: Left;

      Group #Main {
        LayoutMode: Top;

        Group {
          LayoutMode: Left;

          Group #ClaimedChunksInfo {
            LayoutMode: Left;
            Anchor: (Top: 0, Left: 10, Bottom: 10);
            Label  {
              Text: "Select a region on the map that your nation's base will cover.";
              Style: (TextColor: #FFFFFF);
            }
          }
        }

        Group #ChunkInfo {
          FlexWeight: 1;
          LayoutMode: TopScrolling;
          Padding: (Left: 10, Bottom: 10);
          ScrollbarStyle: $C.@DefaultScrollbarStyle;

          Group #ChunkSection {
            Anchor: (Bottom: 10);
            LayoutMode: Top;
            Visible: true;

            Group #ChunkCards {
              LayoutMode: Top;
              Background: "../HycrestAssets/Map.png";
            }
          }
        }

        TextField #BaseNameInput {
            Background: $C.@InputBoxBackground;

            Anchor: (Top: 10, Width: 300, Height: 40);
            Padding: (Full: 10);

            PlaceholderText: "Base Name";
            PlaceholderStyle: (TextColor: #757575);
        }

        $C.@TextButton #ConfirmButton {
            Anchor: (Top: 10, Width: 300, Height: 40);
            Text: "Create Nation Base";
        }
      }
   }
 }
}

$C.@BackButton {}